<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="review">
    <select id="selectReviewsByUserId" resultType="com.tcp.toeflserver.review.Review">
        SELECT *
        FROM review
        WHERE user_id=#{user_id}
    </select>

    <select id="selectReviewsByPlaceId" resultType="com.tcp.toeflserver.review.Review">
        SELECT *
        FROM review
        WHERE place_id=#{place_id}
    </select>

    <insert id="insertReview">
        INSERT INTO review(index, place_id, user_id, score, date, content) VALUES (#{index}, #{place_id}, #{user_id}, #{score}, #{date}, #{content})
    </insert>

    <delete id="deleteReview">
        Delete From review
        WHERE index=#{index}
    </delete>
</mapper>